<h1 class="demo-headline">Listing cards</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tag</th>
      <th>Message</th>
      <th>Image</th>
      <th>Sound</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
    <tr>
      <td><%= card.name %></td>
      <td><%= card.tag %></td>
      <td><%= card.message %></td>
      <td><%= card.image %></td>
      <td><%= card.sound %></td>
      <td><%= link_to 'Show', card %></td>
      <td><%= link_to 'Edit', edit_card_path(card) %></td>
      <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Card', new_card_path %>
